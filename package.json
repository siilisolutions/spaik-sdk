{
    "name": "agent-sdk-monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "examples/frontend"
    ],
    "scripts": {
        "build:hooks": "bun run --cwd packages/agent-sdk-hooks build",
        "build:material": "bun run --cwd packages/agent-sdk-material build",
        "build:packages": "bun run build:hooks && bun run build:material",
        "dev:frontend": "bun run --cwd examples/frontend dev",
        "dev:backend": "cd examples/backend && uv run uvicorn main:app --reload",
        "install:all": "bun install"
    },
    "devDependencies": {
        "typescript": "^5.3.3"
    }
}
